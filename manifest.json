{
  "manifest_version": 3,
  "name": "Pocket Links",
  "version": "1.0",
  "description": "Simple but useful bookmarks manager.",
  "permissions": [
    "bookmarks",
    "readingList"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}